{
  "compilerOptions": {
    "strictNullChecks": true,
    "noUnusedLocals" : true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "lib": ["dom", "es2017"],
    "module": "es2015",
    "target": "es5",
    "jsx": "react",
    "pretty": true
  },
  "files": [
    "./declarations.d.ts",
    "./src/index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
